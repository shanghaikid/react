{
  "name": "server-template",
  "version": "1.0.0",
  "description": "koa based server with app template",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "cover": "NODE_ENV=test nyc mocha $(find src -name '*.test.js')",
    "test": "mocha --compilers js:babel-core/register $(find src -name '*.test.js')",
    "build": "webpack",
    "watch": "npm run clean && `npm bin`/webpack --watch --verbose",
    "start": "webpack --config webpack.config.js",
    "server": "cd dist && NODE_ENV=dev nodemon --config ./nodemon.json server.js --watch server.js",
    "debug": "cd dist && node --nolazy --inspect-brk=5858 server.js"
  },
  "author": "jiangruiyi@gmail.com",
  "license": "ISC",
  "dependencies": {
    "koa": "^2.3.0",
    "koa-better-static2": "^1.0.2",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.1",
    "jsdom": "^11.2.0",
    "mocha": "^3.5.3",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "nyc": "^11.2.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "test/*",
      "docs/*"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
