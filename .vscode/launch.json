{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Program",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "runtimeExecutable": "npm",
        "stopOnEntry": false,
        "sourceMaps": true,
        "runtimeArgs": [
          "run-script", "debug"
        ],
        "env": {
          "NODE_ENV": "development"
        },
        "port": 5858,
        "restart": true,
        "protocol": "inspector"
      }
    ]
  }