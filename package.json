{
  "name": "server-template",
  "version": "1.0.0",
  "description": "koa based server with app template",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "test": "mocha --compilers js:babel-core/register $(find src -name '*.test.js')",
    "build": "npm run clean && webpack && rm -rf dist/tmp",
    "watch": "npm run clean && `npm bin`/webpack --watch --verbose",
    "start": "cd dist && node server.js",
    "dev": "cd dev && NODE_ENV=dev nodemon --config ./nodemon.json index.js",
    "server": "cd dist && NODE_ENV=production nodemon --config ./nodemon.json server.js",
    "debug": "cd dist && node --nolazy --inspect-brk=5858 server.js"
  },
  "author": "jiangruiyi@gmail.com",
  "license": "ISC",
  "dependencies": {
    "koa": "^2.3.0",
    "koa-better-static2": "^1.0.2",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-amd": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "gulp": "^3.9.1",
    "gulp-eslint": "^4.0.0",
    "gulp-babel": "^7.0.0",
    "gulp-debug": "^3.1.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^7.0.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-svgstore": "^6.1.0",
    "gulp-util": "^3.0.8",
    "html-loader": "^0.5.1",
    "jsdom": "^11.2.0",
    "mocha": "^3.5.3",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.5.3",
    "postcss-svg": "^2.1.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "server.js"
    ],
    "ignore": [
      "test/*",
      "docs/*"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
